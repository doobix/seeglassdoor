{
  "manifest_version": 2,

  "name": "seeglassdoor",
  "description": "See Glassdoor information when on a company's website.",
  "version": "0.0",

  "permissions": [
    "tabs", "http://api.glassdoor.com/"
  ],

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }
}