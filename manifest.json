{
  "manifest_version": 2,

  "name": "seeglassdoor",
  "description": "See Glassdoor information when on a company's website.",
  "version": "0.0",

  "permissions": [
    "tabs", "http://api.glassdoor.com/"
  ],

  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "seeglassdoor",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}